<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="wrap_content" android:layout_width="fill_parent">
<ListView android:id="@+id/listThread" 
android:layout_alignParentTop="true"
android:layout_width="fill_parent"
android:layout_marginBottom="50dip"
android:layout_height="fill_parent">
</ListView>
     <RelativeLayout android:layout_marginTop="-50dip" android:gravity="bottom" android:layout_height="wrap_content" android:layout_width="fill_parent">
<LinearLayout android:id="@+id/LinearLayout01" 
android:layout_below="@+id/ListThread" 
android:layout_width="fill_parent" 
android:layout_height="wrap_content"
android:gravity="center_horizontal" 
android:layout_alignParentBottom="true">
    <ImageButton
    	android:id="@+id/first"
    	android:layout_width="50dip"
    	android:layout_height="40dip"
    	android:src="@drawable/fastback" />
    <ImageButton
    	android:id="@+id/prev"
    	android:layout_width="50dip"
    	android:layout_height="40dip"
    	android:src="@drawable/back" />
    <ImageButton
    	android:id="@+id/next"
    	android:layout_width="50dip"
    	android:layout_height="40dip"
    	android:src="@drawable/forward" />
    <ImageButton
    	android:id="@+id/last"
    	android:layout_width="50dip"
    	android:layout_height="40dip"
    	android:src="@drawable/fastforward" />
</LinearLayout>
     </RelativeLayout>
</LinearLayout>
